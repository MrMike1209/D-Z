#include "pch.h"
#include <iostream>
#include <conio.h>
#include<Windows.h>
#include <cstdlib>
#include <clocale>

using namespace std;

const int Up = 80;
const int Daun = 72;
const int Enter = 13;

int Arr[10];
int LongArr = 10;
int ItemShow = 0;

void gotoxy(short x, short y)
{
	SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), (COORD{ x, y }));
}

void menu()
{
	system("cls");
	cout << "Показать масcив" << endl;
	cout << "Сортировка по возрaстанию" << endl;
	cout << "Сортировка по убывнию" << endl;
	cout << "EXIT" << endl;

}

void Array()
{
	for (int i = 0; i < LongArr; i++)
	{
		Arr[i] = rand() % 99;
	}
}

void ArrayPocaz()
{
	if (ItemShow == 0) {
		system("cls");
	}

	for (int i = 0; i < LongArr; i++)
	{
		cout << Arr[i] << ";";
	}
	cout << endl;
}

void ArraySortUp()
{
	int buf;
	Array();
	ArrayPocaz();
	ItemShow++;
	buf = Arr[0];
	for (int i = 0; i < LongArr; i++)
	{
		for (int j = 0; j < (LongArr--); j++) {
			if (Arr[j + 1] < Arr[j]) {
				buf = Arr[j];
				Arr[j] = Arr[j + 1];
				Arr[j + 1] = buf;
			}
		}
	}
	cout << "Отсортированный массив" << endl;
	ArrayPocaz();
	ItemShow--;
}

void ArraySortDaun()
{
	int buf;
	Array();
	ArrayPocaz();
	ItemShow++;
	buf = Arr[0];
	for (int i = 0; i < LongArr; i++)
	{
		for (int j = 0; j < (LongArr--); j++) {
			if (Arr[j + 1] > Arr[j]) {
				buf = Arr[j];
				Arr[j] = Arr[j + 1];
				Arr[j + 1] = buf;
			}
		}
	}
	cout << "Отсортированный массив" << endl;
	ArrayPocaz();
	ItemShow--;
}

void ExitGlobal()
{
	const int LotItem = 2;
	bool Exit = false;
	int ch, MenuItem;
	while (!Exit) {
		system("cls");
		cout << "Yes" << endl;
		cout << "No" << endl;
		gotoxy(0, MenuItem);
		ch = _getch();
		switch (ch)
		{
		case Daun: MenuItem--; break;
		case Up:  MenuItem++;  break;
		case Enter:
			if (MenuItem == 0)
			{
				system("cls");
				EXIT_SUCCESS;

			}
			else if (MenuItem == 1)
			{

			}

			break;

		}
		if (MenuItem < 0) MenuItem = LotItem - 1;
		if (MenuItem > LotItem - 1) MenuItem = 0;
	}
}

int main()
{
	setlocale(LC_ALL, "RUS");
	const int LotItem = 4;
	bool exit = false;
	int ch, MenuItem;
	while (!exit)
	{
		menu();
		gotoxy(0, MenuItem);
		ch = _getch();
		switch (ch)
		{
		case Daun: MenuItem--; break;
		case Up:  MenuItem++;  break;
		case Enter:
			if (MenuItem == 0)
			{
				Array();
				ArrayPocaz();
				_getch();
			}
			else if (MenuItem == 1)
			{
				ArraySortUp();
				_getch();
			}

			else if (MenuItem == 2)
			{
				ArraySortDaun();
				_getch();

			}
			else if (MenuItem == 3)
			{
				ExitGlobal();
			}
			break;
		}
		if (MenuItem < 0) MenuItem = LotItem - 1;
		if (MenuItem > LotItem - 1) MenuItem = 0;
	}

	return 0;
}
